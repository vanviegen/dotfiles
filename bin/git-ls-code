#!/usr/bin/env bash

if [ $? != 0 ] ; then exit 1 ; fi 

startDir="`pwd`"
dir=""
cwd="$startDir"
while [ ! -d .git ] ; do
	dir="`basename $cwd`/$dir"
	cd ..
	ncwd="`pwd`"
	if [ "$cwd" = "$ncwd" ] ; then
		echo "no git repository?"
		exit 1
	fi
	cwd="$ncwd"
done

regex='$^'
if [ -f .searchignore ] ; then
	while read glob ; do
		regex="$regex|^$glob"'$'
	done  < <(cat .searchignore | sed -E 's/[.]/[.]/g' | sed -E 's/[*]/.*/g' | sed -E 's/[?]/./g')
fi

cutPos="x$dir"
cutPos=${#cutPos}

cd "$startDir"
while read file ; do
	# Filter out symlinks
	if [ -e "$file" -a ! -L "$file" ] ; then echo $file ; fi
done < <(git ls-files -co --exclude-standard | awk '{ print "'"$dir"'" $0 }' | grep -v -E "$regex" | cut -c $cutPos-  | sort -u )

